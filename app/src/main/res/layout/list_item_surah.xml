<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#FBF7F7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textNo"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_alignParentTop="true"
                    android:text="No"
                    android:background="@drawable/b_nomer"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textInd"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:text="Text Indo"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/textGrpSurat"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="Ket.Surat"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:gravity="end">

                <TextView
                    android:id="@+id/textArab"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/textView"
                    android:layout_gravity="right"
                    android:gravity="center_vertical"
                    android:layout_marginRight="60dp"
                    android:text="Text Arab"
                    android:textColor="@android:color/black"
                    android:textSize="26sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>